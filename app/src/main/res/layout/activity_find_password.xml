<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9ddc8"
    android:orientation="vertical"
    tools:context=".FindPassword">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/resetpassword"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/idcard"
            android:scaleType="fitCenter"
            />

        <EditText
            android:id="@+id/resetMail"
            android:background="@color/white"
            android:layout_marginLeft="3dp"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="  가입한 이메일을 입력하세요." />
    </LinearLayout>

    <ImageButton
        android:id="@+id/send_reset_mail"
        android:layout_marginTop="40dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/sendresetmail"
        android:layout_gravity="center"
        android:background="#e9ddc8"
        />


</LinearLayout>